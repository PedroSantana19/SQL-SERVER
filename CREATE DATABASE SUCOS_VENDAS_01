ALTER TABLE [TABELA DE PRODUTOS]
ADD CONSTRAINT PK_TABELA_DE_PRODUTOS
PRIMARY KEY CLUSTERED([CODIGO DO PRODUTO])

ALTER TABLE [TABELA DE PRODUTOS]
